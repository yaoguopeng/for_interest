.home-content{
  position: relative;
  width: 100%;
  height: 100%;
}
.img-bg{
  position: absolute; 
  width: 100%;
  height: 100%;
}
.btn{
			width: 30px;
			height: 50px;
			line-height: 50px;
			text-align: center;
			background: rgba(255, 255, 255, 0.9); 
      opacity: 0.1;
			position: absolute;
			top: 50%;
			margin-top: -25px;
      z-index: 99
		}
		.left-btn{
			left: 0;
		}
		.right-btn{
			right: 0
		}
    .motto{
      width: 100%;
      color: #ffffff;
      text-align: center;
      z-index: 99;
      position: absolute;
      bottom: 20%;
    }

/* 背景音乐  */
.music{
   margin-left: 8%;
   z-index: 99;
   opacity: 1;
   top: 20rpx;
   right: 20rpx;
   position: absolute;
}

.bgmImg {
  width: 70rpx;
  height: 70rpx;
}

.bgmImgAni {
  animation: jumpball 4s infinite linear;
}

@keyframes jumpball {
  100% {
    transform: rotate(360deg);
  }
}
